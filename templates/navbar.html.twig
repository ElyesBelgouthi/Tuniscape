<header>
    <div class="logo">
        <img src="{{ asset('assets/img/logo.png') }}" />
    </div>
    <nav class="nav">
        <ul class="nav__list">
            <li class="nav__item"><a href="{{ path('app_home') }}" class="nav__link">Home</a></li>
            <li class="nav__item">
                <a href="#services" class="nav__link">Services</a>
            </li>
            <li class="nav__item">
                <a href="#about" class="nav__link">About us</a>
            </li>
            {% if app.user %}
                <li class="nav__item">
                    <!--You are logged in as  -->
                    <a href="{{ path('app_logout') }}">
                        <button class="login--btn btn">LOG OUT</button>
                    </a>
                </li>
            {% else %}
                <li class="nav__item">
                    <a href="{{ path('app_login') }}" target="_self"
                    ><button class="login--btn btn">LOGIN</button></a
                    >
                </li>
            {% endif %}
        </ul>
    </nav>
</header>