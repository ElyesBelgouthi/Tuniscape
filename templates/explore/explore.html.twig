    {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const addButtons = document.querySelectorAll('.add-btn');

                addButtons.forEach(function(button) {
                    button.addEventListener('click', async function() {
                        const aid = button.getAttribute('activity-id');
                        const fid = button.getAttribute('food-id');
                        const pid = button.getAttribute('accommodation-id');

                        let requestBody = '';

                        if (aid) {
                            requestBody += `activity_id=${aid}`;
                        }

                        if (fid) {
                            if (requestBody) {
                                requestBody += '&';
                            }
                            requestBody += `food_id=${fid}`;
                        }

                        if (pid) {
                            if (requestBody) {
                                requestBody += '&';
                            }
                            requestBody += `accommodation_id=${pid}`;
                        }

                        const response = await fetch('{{ path('app_explore_add') }}', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: requestBody,
                        });

                        if (response.ok) {
                            // Update the page without reloading it, e.g., display a success message
                        } else {
                            // Handle errors, e.g., display an error message
                        }
                    });
                });
            });
        </script>
