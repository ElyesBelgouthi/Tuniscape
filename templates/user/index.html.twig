    <title>Tuniscape</title>

<body>
{% include 'navbar.html.twig' %}
<section class="login--page">
    <div class="login--container">
        <div class="login--img">
            <img src="{{ asset("assets/img/signup1.jpg") }}" alt="" />
        </div>
        <div class="form-container">
            <p class="title">Edit Profile</p>
            <div class="login-box">
                {{ form_start(userForm, {'attr': {'id': 'registration-form'}}) }}
                <div class="user-box full-box">
                    <div class="user-box full-box">
                        {{ form_widget(userForm.username, {'required': true}) }}
                        <label>Username</label>
                    </div>
                    <div class="flex-box">
                        <div class="user-box half-box">
                            {{ form_widget(userForm.firstName, {'required': true}) }}

                            <label>First Name</label>
                        </div>
                        <div class="user-box half-box">
                            {{ form_widget(userForm.lastName, {'required': true}) }}

                            <label>Last Name</label>
                        </div>
                    </div>
                    <div class="flex-box">
                        <div class="user-box half-box">
                            {{ form_widget(userForm.age, {'required': true}) }}

                            <label>Age</label>
                        </div>
                        <div class="user-box half-box">
                            {{ form_widget(userForm.nationality, {'required': true}) }}

                            <label>Nationality</label>
                        </div>
                    </div>

                    <a href="#" id="submit-form">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        Save
                    </a>
                    {{ form_end(userForm) }}

                </div>
                <p>
                    Do you want to change password ?
                    <a href="{{ path('app_forgot_password') }}" class="a2">change password</a>
                </p>
            </div>
        </div>
    </div>
</section>
<script src="{{ asset("assets/js/register.js") }}"></script>
</body>
</html>
